generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}


model User {
  id Int @id @default(autoincrement())
  nombre String?
  idType Int? 

  category Category? @relation(fields: [idType], references: [id])

  @@map("users")
}

model Category {
  id Int @id @default(autoincrement())
  nombre String?
  comentario String?
  users User[]
  
  @@map("categories")
}

